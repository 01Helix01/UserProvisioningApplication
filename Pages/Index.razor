@page "/"
@inject NavigationManager NavigationManager

<h1>Enterprise Services User Provisioning Tool</h1>

<div class="description-container">
    <p>This tool has been built by Enterprise Services to aid in user provisioning. It provides a streamlined process for user provisioning in various applications managed by the Shared Services team.</p>
</div>

<div class="container">
    <h2>Creation:</h2>
    <div class="app-container">
        <div class="app-card" @onclick="GoToApp2">
            <h3>Cobblestone</h3>
            <p>Create user account for Cobblestone. Used by CNO contractors</p>
        </div>
        <div class="app-card" @onclick="GoToApp3">
            <h3>Total Recall</h3>
            <p>Create user account for Total Recall. Used in CNO warehouses</p>
        </div>
        <div class="app-card" @onclick="GoToApp4">
            <h3>After Action Report</h3>
            <p>File an after action report for a high profile incident</p>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 40px;">
    <h2>Modify:</h2>
    <div class="app-container">
        <div class="app-card">
            <h3>App1</h3>
            <p>Do something</p>
        </div>
        <div class="app-card">
            <h3>App2</h3>
            <p>Do something</p>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 40px;">
    <h2>Deletion:</h2>
    <div class="app-container">
        <div class="app-card">
            <h3>App1</h3>
            <p>Do something</p>
        </div>
        <div class="app-card">
            <h3>App2</h3>
            <p>Do something</p>
        </div>
    </div>
</div>

@code {
    private void GoToApp2()
    {
        // Navigate to Application 2 User Creation Page
        NavigationManager.NavigateTo("/Cobblestone");
    }

    private void GoToApp3()
    {
        // Navigate to Application 3 User Creation Page
        NavigationManager.NavigateTo("/Total_Recall");
    }

    private void GoToApp4()
    {
        NavigationManager.NavigateTo("/PostMortem");
    }
}
